<% if (success && success.length) { %>
<div 
    class="alert alert-success alert-dismissible fade show text-center mx-auto mt-3 flash-box"
    role="alert"
    style="width: 60%;"
>
    <%= success %>
    <button 
        type="button" 
        class="btn-close" 
        data-bs-dismiss="alert" 
        aria-label="Close"
    ></button>
</div>
<% } %>

<% if (error && error.length) { %>
<div 
    class="alert alert-danger alert-dismissible fade show text-center mx-auto mt-3 flash-box"
    role="alert"
    style="width: 60%;"
>
    <%= error %>
    <button 
        type="button" 
        class="btn-close" 
        data-bs-dismiss="alert" 
        aria-label="Close"
    ></button>
</div>
<% } %>
